<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Elecciones 2023 | @ViewData["Title"] </title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="icon" href="/imagenes/favicon.ico">
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href='@Url.Action("Index")'><img src="/imagenes/argentina.png" alt=""></a></li>
                    <li><a href='@Url.Action("Elecciones")'>Elecciones 2023</a></li>
                    <li><a href='@Url.Action("Creditos")'>Creditos</a></li>
                </ul>
            </nav>
        </header>

        <div style="padding:20px 10px 0px 10px;">
            @RenderBody()
        </div>

        <footer>
                &copy; @DateTime.Now.Year - Taller de Programación - Elecciones 2023
        </footer>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
